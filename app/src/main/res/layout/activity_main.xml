<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <EditText
        android:id="@+id/input1"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toTopOf="@id/input2"
        android:hint="Sayı Giriniz!"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="90dp"/>
    <EditText
        android:id="@+id/input2"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/input1"
        android:layout_marginTop="20dp"
        android:hint="Sayı Giriniz!"
        />
    <Button
        android:id="@+id/topla"
        android:layout_width="50dp"
        android:layout_height="wrap_content"
        android:text="+"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/input2"
        app:layout_constraintEnd_toStartOf="@id/cikar"
        android:layout_marginTop="100dp"
        />
    <Button
        android:id="@+id/cikar"
        android:layout_width="50dp"
        android:layout_height="wrap_content"
        android:text="-"
        app:layout_constraintStart_toEndOf="@id/topla"
        app:layout_constraintEnd_toStartOf="@id/carp"
        app:layout_constraintTop_toTopOf="@id/topla"
        />
    <Button
        android:id="@+id/carp"
        android:layout_width="50dp"
        android:layout_height="wrap_content"
        android:text="*"
        app:layout_constraintStart_toEndOf="@id/cikar"
        app:layout_constraintTop_toTopOf="@id/topla"
        app:layout_constraintEnd_toStartOf="@id/bol"
        />
    <Button
        android:id="@+id/bol"
        android:layout_width="50dp"
        android:layout_height="wrap_content"
        android:text="/"
        app:layout_constraintStart_toEndOf="@id/carp"
        app:layout_constraintTop_toTopOf="@id/topla"
        app:layout_constraintEnd_toEndOf="parent"
        />
    <TextView
        android:id="@+id/sonuc"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Sonuç="
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/topla"
        app:layout_constraintBottom_toBottomOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>